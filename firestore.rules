rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if user owns the document
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Helper function to check if user is premium
    function isPremium(userId) {
      return isAuthenticated()
        && request.auth.uid == userId
        && get(/databases/$(database)/documents/users/$(userId)).data.isPremium == true;
    }

    // Helper function to get parent's question count
    function getQuestionCount(userId, parentId) {
      return get(/databases/$(database)/documents/users/$(userId)/parents/$(parentId)).data.questionCount;
    }

    // Helper function to check if user can add more questions
    // Free users: 25 questions max, Premium users: 100 questions max
    function canAddQuestion(userId, parentId) {
      let questionCount = getQuestionCount(userId, parentId);
      let maxQuestions = isPremium(userId) ? 100 : 25;
      return questionCount < maxQuestions;
    }

    // Users collection
    match /users/{userId} {
      // Users can read and write their own document
      allow read, write: if isOwner(userId);

      // Parents subcollection
      match /parents/{parentId} {
        // Users can read and write their own parents
        allow read, write: if isOwner(userId);

        // Answers subcollection - all authenticated users can save answers
        match /answers/{answerId} {
          allow read, write: if isOwner(userId);
        }

        // Custom Questions subcollection
        // Free users: 25 questions max, Premium users: 100 questions max
        match /customQuestions/{questionId} {
          allow read: if isOwner(userId);
          allow delete: if isOwner(userId);
          allow create: if isOwner(userId) && canAddQuestion(userId, parentId);
          allow update: if isOwner(userId);
        }

        // Selected Questions subcollection
        // Free users: 25 questions max, Premium users: 100 questions max
        match /selectedQuestions/{questionId} {
          allow read: if isOwner(userId);
          allow delete: if isOwner(userId);
          allow create: if isOwner(userId) && canAddQuestion(userId, parentId);
          allow update: if isOwner(userId);
        }
      }
    }

    // Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
