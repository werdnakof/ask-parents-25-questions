rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if user owns the document
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Helper function to check if user is premium
    function isPremium(userId) {
      return isAuthenticated()
        && request.auth.uid == userId
        && get(/databases/$(database)/documents/users/$(userId)).data.isPremium == true;
    }

    // Users collection
    match /users/{userId} {
      // Users can read and write their own document
      allow read, write: if isOwner(userId);

      // Parents subcollection
      match /parents/{parentId} {
        // Users can read and write their own parents
        allow read, write: if isOwner(userId);

        // Answers subcollection - all authenticated users can save answers
        match /answers/{answerId} {
          allow read, write: if isOwner(userId);
        }

        // Custom Questions subcollection - all users can add/delete
        // (25 question limit for free users enforced in app code)
        match /customQuestions/{questionId} {
          allow read, write: if isOwner(userId);
        }

        // Selected Questions subcollection - all users can add/delete
        // (25 question limit for free users enforced in app code)
        match /selectedQuestions/{questionId} {
          allow read, write: if isOwner(userId);
        }
      }
    }

    // Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
